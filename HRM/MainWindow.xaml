<Window x:Class="HRM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HRM"
        mc:Ignorable="d"
        Title="Employee Management" Height="450" Width="800">
    <Window.Resources>
        <local:TeamColumnConverter x:Key="TeamColumnConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Buton principal pentru a afișa câmpurile -->
        <Button x:Name="ShowAddButton" 
                Content="Adaugă Persoană" 
                Click="ShowAddButton_Click"
                HorizontalAlignment="Left"
                Width="120"
                Height="30"
                Grid.Row="0"/>

        <!-- Undo Button - Moved to top right and made smaller -->
        <Button x:Name="UndoButton"
        Content="Undo" 
        Click="Undo_Click" 
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Width="80"
        Height="30"
        Margin="0,0,100,10"
        Grid.Row="0"/>

        <!-- Panel pentru butonul de ștergere (inițial ascuns) -->
        <StackPanel x:Name="DeletePanel"
            Orientation="Horizontal"
            Margin="0,-40,0,10"
            Grid.Row="1"
            Visibility="Collapsed">
            <TextBlock Text="Alege Opțiunea" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button Content="Editează"
            x:Name="EditButton"
            Click="Edit_Click"
            Margin="0,0,10,0"/>
            <Button Content="Șterge"
            Click="Delete_Click"
            Margin="0,0,10,0"/>
            <Button Content="Anulează"
            Click="CancelDelete_Click"/>
        </StackPanel>

        <!-- Lista angajaților -->
        <DataGrid x:Name="EmployeeDataGrid" 
          Grid.Row="2"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          SelectionMode="Single"
          IsReadOnly="True"
          SelectionChanged="EmployeeDataGrid_SelectionChanged"
          Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="*"/>
                <DataGridTextColumn Header="Team" Width="*" 
                 Binding="{Binding ., Converter={StaticResource TeamColumnConverter}}"/>
                <DataGridTextColumn Header="Hire Date" Binding="{Binding HireDate, StringFormat=d}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel x:Name="ToastContainer"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Right"
            Margin="10"
            Orientation="Vertical"
            Panel.ZIndex="999"
            IsHitTestVisible="False" />
        <Button x:Name="LogoutButton"
        Content="Logout"
        Width="80"
        Height="30"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Margin="0,0,10,0"
        Click="LogoutButton_Click"/>

        <StackPanel x:Name="FilterPanel" Orientation="Horizontal" Grid.Row="0" Margin="180,0,0,10">
            <ComboBox x:Name="FilterTypeComboBox" Width="100" Height="30" SelectedIndex="0">
                <ComboBoxItem x:Name="FilterByName" Content="Nume"/>
                <ComboBoxItem x:Name="FilterByRole" Content="Rol"/>
                <ComboBoxItem x:Name="FilterByTeam" Content="Echipa"/>
            </ComboBox>
            <TextBox x:Name="FilterTextBox" Width="150" Height="30" Margin="5,0,0,0"/>
            <Button Content="Filtrează" Click="FilterButton_Click" Width="80" Height="30" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>