<Window x:Class="HRM.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HRM"
        mc:Ignorable="d"
        Title="LoginWindow" Height="250" Width="400">
    <StackPanel>
        <TextBox x:Name="UsernameBox" Width="200"  Margin="30"/>
        <PasswordBox x:Name="PasswordBox" Width="200" Margin="-10"/>
        <Button Content="Login" Click="Login_Click" Width="200" Margin="50"/>
    </StackPanel>
</Window>
