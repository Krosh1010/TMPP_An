<Window x:Class="HRM.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HRM"
        mc:Ignorable="d"
        Title="Employee Management Login" 
        Height="450" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        
        Background="#F5F7FA">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style TargetType="Button" x:Key="ModernButton">
            <Setter Property="Background" Value="#4285F4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12 6"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="4" Opacity="0.2" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3367D6"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2A56C6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0 0 0 10"/>
        </Style>

        <!-- PasswordBox Style -->
        <Style TargetType="PasswordBox">
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0 0 0 20"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="White" 
                CornerRadius="8" 
                Padding="30"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="320"
                Effect="{StaticResource ShadowEffect}">
            <StackPanel>
                <TextBlock Text="Employee Login" 
                           FontSize="20" 
                           FontWeight="SemiBold"
                           Foreground="#333333"
                           Margin="0 0 0 20"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Username" 
                           FontSize="13"
                           Foreground="#555555"
                           Margin="0 0 0 5"/>
                <TextBox x:Name="UsernameBox" 
                         Style="{StaticResource {x:Type TextBox}}"
                         FontSize="14"/>

                <TextBlock Text="Password" 
                           FontSize="13"
                           Foreground="#555555"
                           Margin="0 10 0 5"/>
                <PasswordBox x:Name="PasswordBox" 
                             Style="{StaticResource {x:Type PasswordBox}}"/>

                <Button Content="Login" 
                        Click="Login_Click" 
                        Style="{StaticResource ModernButton}"
                        Margin="0 20 0 0"
                        Height="40"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>