<Window x:Class="HRM.EditEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editează Angajat" Height="250" Width="350" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20">
        <TextBlock Text="Nume:"/>
        <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>
        <TextBlock Text="Rol:"/>
        <ComboBox x:Name="RoleComboBox" Margin="0,0,0,10" SelectionChanged="RoleComboBox_SelectionChanged">
            <ComboBoxItem Content="HR"/>
            <ComboBoxItem Content="Manager"/>
            <ComboBoxItem Content="Developer"/>
        </ComboBox>
        <TextBlock Text="Echipă:"/>
        <ComboBox x:Name="TeamComboBox" Margin="0,0,0,10">
            <ComboBoxItem Content="Front"/>
            <ComboBoxItem Content="Back"/>
            <ComboBoxItem Content="Tester"/>
        </ComboBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Salvează" Width="80" Margin="0,0,10,0" Click="Save_Click"/>
            <Button Content="Anulează" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>